.big-box{
  width: 100%;
  background-color:#F9FCFB ;
  height: 1100rpx;
}

.navigation-box{
  width:100%;
  height: 400rpx;
  background:linear-gradient(to right,#AEFAF8,#F9EFEE,#EFDAF9);
  border-radius: 18rpx;
}
.img-box{
  width: 200rpx;
  height: 200rpx;
}
.img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  margin-left:30rpx;
  margin-top: 160rpx;
}
.account-box{
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: 700;
  color: #4e4e4e;
  margin: 110rpx 0 0 58rpx;
}

.botton-box{
  width: 100%;
 background-color: #f3f1f1;
  padding: 40rpx auto;
}
.item{
  margin: 10rpx auto;
  height: 100rpx;
  width: 730rpx;
  background-color: #F8FCFB;
  line-height: 100rpx;
  font-weight: 400rpx;
  text-indent: 30rpx;
}
.exit{
  color:#ffffff;
  margin: 40rpx auto 0;
  width: 600rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #FFABA2;
  border-radius: 30rpx;
}